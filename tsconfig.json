{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,

    // Optional but helpful:
    "types": ["three"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
